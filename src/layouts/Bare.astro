---
import Meta from "../components/Meta.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-VG5XRY1VK5"></script>

    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("consent", "default", {
        ad_storage: "denied",
        ad_user_data: "denied",
        ad_personalization: "denied",
        analytics_storage: "denied",
      });

      gtag("config", "G-VG5XRY1VK5");
    </script>

    <script
      is:inline
      type="text/plain"
      data-category="analytics"
      data-service="Google Analytics"
    >
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      // Update consent settings to allow analytics tracking
      gtag("consent", "update", {
        analytics_storage: "granted",
      });

      // Re-enable GA tracking
      gtag("config", "G-VG5XRY1VK5");
    </script>

    <Meta title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <slot />
  </body>
</html>
