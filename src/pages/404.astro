---
import Bare from "../layouts/Bare.astro";
---

<Bare>
  <main
    class="grid min-h-screen place-items-center bg-savalera-pez-blue px-6 py-24 sm:py-32 lg:px-8"
  >
    <div class="text-center">
      <p class="text-base font-semibold text-blue-300">404</p>
      <h1
        class="mt-4 text-balance text-5xl font-semibold tracking-tight text-savalera-bright-purple sm:text-7xl"
      >
        Page not found
      </h1>
      <p
        class="mt-6 text-pretty text-lg font-medium text-gray-500 sm:text-xl/8"
      >
        Sorry, we couldn't find the page you're looking for.
      </p>
      <div class="mt-10 flex justify-center">
        <a
          href="/"
          class="text-sm/7 font-semibold text-blue-300 hover:text-blue-400"
          ><span aria-hidden="true">&larr;</span> Back to home</a
        >
      </div>
    </div>
  </main>
</Bare>
